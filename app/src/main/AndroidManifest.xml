<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="githubpeekbyamit.example.githubpeek">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_group_1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_group_1"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubPeek">
        <activity android:name=".FavActivity"></activity>
        <activity android:name=".RepoListActivity" />
        <activity android:name=".UserActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>